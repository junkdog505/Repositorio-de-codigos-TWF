---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card';
import Search from '../components/Search';
import PageHeader from '../components/ui/PageHeader.astro';
import { getSnippets } from '../lib/api';
import { Terminal } from 'lucide-react';

const latestSnippets = await getSnippets({ per_page: 6 });
---

<Layout title="Inicio">
  
  <PageHeader 
    title="Repositorio de Código" 
    subtitle="Colección técnica de snippets verificados para desarrollo profesional."
    label="CORE / HOME"
  >
    <Search client:load />
  </PageHeader>

  <section class="py-16 md:py-24 px-4 md:px-6 bg-[var(--bg-secondary)]">
    <div class="max-w-7xl mx-auto">
      <div class="flex items-center justify-between mb-12 pb-4 border-b-4 border-[var(--text-primary)]">
        <div class="flex items-center gap-4">
           <Terminal size={24} className="text-[#ff3344] shrink-0" />
           <h2 class="text-3xl md:text-5xl font-black uppercase italic tracking-tighter">Archivo</h2>
        </div>
        <a href="/codes" class="hidden md:block text-xs font-black uppercase tracking-[0.2em] px-6 py-3 border-2 border-[var(--text-primary)] hover:bg-[#ff3344] hover:text-white transition-all">
          Ver Todo
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {latestSnippets.map((snippet) => (
          <Card snippet={snippet} client:load />
        ))}
      </div>
    </div>
  </section>
</Layout>
