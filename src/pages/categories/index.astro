---
import Layout from '../../layouts/Layout.astro';
import Search from '../../components/Search';
import PageHeader from '../../components/ui/PageHeader.astro';
import DynamicTaxonomyList from '../../components/DynamicTaxonomyList';
import { getCategories } from '../../lib/api';
import { Folder } from 'lucide-react';

const categories = await getCategories();
---

<Layout title="Categorías" description="Explora todos los temas de nuestra biblioteca técnica.">
  
  <PageHeader 
    title="Categorías" 
    subtitle="Estructura técnica organizada por arquitectura y lenguaje central."
    label="SISTEMA / NODOS"
    icon={Folder}
  >
    <Search client:load />
  </PageHeader>

  <div class="max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-24">
    <DynamicTaxonomyList 
      type="categories" 
      staticItems={categories} 
      client:load 
    />
  </div>
</Layout>
