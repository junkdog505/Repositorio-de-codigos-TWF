---
import Layout from '../../layouts/Layout.astro';
import Search from '../../components/Search';
import PageHeader from '../../components/ui/PageHeader.astro';
import { getTags } from '../../lib/api';
import { Hash } from 'lucide-react';

const tags = await getTags();
---

<Layout title="Etiquetas" description="Temas específicos y tecnologías de vanguardia.">
  
  <PageHeader 
    title="Etiquetas" 
    subtitle="Filtrado dinámico por librerías, patrones y dependencias específicas."
    label="SISTEMA / ATOM"
    icon={Hash}
  >
    <Search client:load />
  </PageHeader>

  <div class="max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-24">
    <div class="flex flex-wrap gap-3 md:gap-4">
      {tags.map((tag) => (
        <a href={`/tag/${tag.slug}`} class="group px-6 py-3 border-2 border-[var(--text-primary)] bg-[var(--bg-secondary)] hover:bg-[#ff3344] hover:text-white hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all duration-200">
          <span class="text-xs md:text-sm font-black uppercase">#{tag.name}</span>
          <span class="ml-3 text-[10px] font-black opacity-30 group-hover:opacity-100">{tag.count}</span>
        </a>
      ))}
    </div>
  </div>
</Layout>
