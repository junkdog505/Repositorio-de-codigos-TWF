---
import Layout from '../../layouts/Layout.astro';
import Search from '../../components/Search';
import PageHeader from '../../components/ui/PageHeader.astro';
import DynamicTaxonomyList from '../../components/DynamicTaxonomyList';
import { getTags } from '../../lib/api';
import { Hash } from 'lucide-react';

const tags = await getTags();
---

<Layout title="Etiquetas" description="Temas específicos y tecnologías de vanguardia.">
  
  <PageHeader 
    title="Etiquetas" 
    subtitle="Filtrado dinámico por librerías, patrones y dependencias específicas."
    label="SISTEMA / ATOM"
    icon={Hash}
  >
    <Search client:load />
  </PageHeader>

  <div class="max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-24">
    <DynamicTaxonomyList 
      type="tags" 
      staticItems={tags} 
      client:load 
    />
  </div>
</Layout>
