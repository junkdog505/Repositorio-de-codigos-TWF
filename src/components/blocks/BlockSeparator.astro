---
import type { BlockSeparator as BlockSeparatorType } from '../../types/wp';

interface Props {
  block: BlockSeparatorType;
}

const { block } = Astro.props;
const { estilo } = block;

const styles = {
  simple: "border-t border-slate-200 dark:border-slate-700 my-8",
  doble: "border-t-4 border-double border-slate-200 dark:border-slate-700 my-8",
  espaciado: "my-12",
};
---

<hr class={styles[estilo] || styles.simple} />
