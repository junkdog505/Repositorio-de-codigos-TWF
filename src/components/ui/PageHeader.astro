---
import { Cpu } from 'lucide-react';

interface Props {
  title: string;
  subtitle: string;
  label?: string;
  icon?: any;
}

const { title, subtitle, label = "SISTEMA / V3.0", icon: Icon = Cpu } = Astro.props;
---

<section class="pt-28 md:pt-36 pb-12 px-4 md:px-6 border-b-2 border-[var(--text-primary)] bg-[var(--bg-primary)] overflow-hidden">
  <div class="max-w-7xl mx-auto flex flex-col lg:flex-row justify-between items-start gap-10">
    <div class="max-w-2xl">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-8 h-8 bg-[#ff3344] flex items-center justify-center text-white border-2 border-black shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
          <Icon size={16} />
        </div>
        <span class="text-[10px] font-black uppercase tracking-[0.3em]">{label}</span>
      </div>
      <h1 class="text-5xl md:text-7xl font-black uppercase mb-4 italic tracking-tighter leading-tight">
        {title}<span class="text-[#ff3344] not-italic">.</span>
      </h1>
      <p class="font-bold text-[var(--text-primary)] opacity-90 max-w-lg leading-snug" style="font-size: 1.1em;">
        {subtitle}
      </p>
    </div>
    
    <div class="w-full lg:w-[450px] border-2 border-[var(--text-primary)] bg-[var(--bg-secondary)] shadow-[6px_6px_0px_0px_#ff3344]">
      <div class="px-4 py-2 border-b-2 border-[var(--text-primary)] bg-[var(--text-primary)] text-[var(--bg-primary)] flex justify-between items-center">
        <span class="text-[9px] font-black uppercase tracking-[0.2em]">Terminal de b√∫squeda</span>
        <div class="flex gap-1.5">
          <div class="w-2 h-2 rounded-full bg-[#ff3344]"></div>
          <div class="w-2 h-2 rounded-full bg-[var(--bg-primary)] opacity-20"></div>
        </div>
      </div>
      <div class="p-6 bg-[var(--bg-secondary)]">
        <slot />
      </div>
    </div>
  </div>
</section>
