---
import type { WPCodeSnippet } from '../types/wp';
import { format } from 'date-fns';
import { es } from 'date-fns/locale';
import { Terminal } from 'lucide-react';

interface Props {
  snippet: WPCodeSnippet;
  class?: string; 
}

const { snippet, class: className } = Astro.props;
const { title, acf, date, slug } = snippet;
const formattedDate = format(new Date(date), "dd.MM.yyyy", { locale: es });
---

<a href={`/codes/${slug}`} class:list={["group relative block bg-[var(--bg-primary)] border-2 border-[var(--text-primary)] p-10 hover:shadow-[12px_12px_0px_0px_rgba(255,51,68,1)] transition-all duration-300", className]}>
  <div class="flex flex-col h-full">
    <div class="flex items-center justify-between mb-8 pb-4 border-b border-[var(--border-color)]">
      <div class="flex items-center gap-3">
        <Terminal size={16} className="text-[#ff3344]" />
        <span class="text-[10px] font-black uppercase tracking-widest text-[var(--text-secondary)]">{formattedDate}</span>
      </div>
      <span class="text-[10px] font-black uppercase tracking-widest px-2 py-1 bg-[var(--text-primary)] text-[var(--bg-primary)]">
        {acf.dificultad}
      </span>
    </div>

    <h3 class="text-3xl font-black uppercase leading-[1] mb-6 group-hover:text-[#ff3344] transition-colors" set:html={title.rendered} />

    <p class="text-sm font-bold text-[var(--text-secondary)] line-clamp-3 mb-8 uppercase tracking-tight">
      {acf.extracto_corto}
    </p>
    
    <div class="mt-auto flex items-center gap-2 text-[10px] font-black uppercase tracking-[0.2em] text-[#ff3344]">
      Leer Documentación <span>→</span>
    </div>
  </div>
</a>
